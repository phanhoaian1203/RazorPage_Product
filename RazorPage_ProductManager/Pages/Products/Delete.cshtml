@page
@model RazorPage_ProductManager.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Xóa";
}
<h1>XÓA SẢN PHẨM</h1>
<h3 class="text-danger">Bạn có chắc chắn muốn xóa sản phẩm này không?</h3>
<div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <dl class="row">
        <dt class="col-sm-2">Mã</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.Code)</dd>
        <dt class="col-sm-2">Tên</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.Name)</dd>
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.Price)</dd>
        <dt class="col-sm-2">Số lượng</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.Quantity)</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.Description)</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Xóa luôn" class="btn btn-danger" /> |
        <a asp-page="/Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>
